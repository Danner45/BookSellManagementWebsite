@model Project_64130005.Models.KhachHang

@{
    ViewBag.Title = "Register_64130005";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="auth-form">
    @using (Html.BeginForm("Register_64130005", "KhachHang_64130005", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <div class="auth-form__container">

            <div class="auth-form__header">
                <h3 class="auth-form__heading">Đăng ký</h3>
                <span>@Html.ActionLink("Đăng nhập", "Login_64130005", "KhachHang_64130005", new { @class = "auth-form__switch-btn myactionlink" }) </span>
            </div>
            <div class="auth-form__form">
                <div class="auth-form__group">
                    @Html.TextBoxFor(m => m.TenKH, "", new { @class = "auth-form__input", @placeholder = "Tên" })
                    @Html.ValidationMessageFor(m => m.TenKH, "", new { @class = "validate" })
                </div>
                <div class="auth-form__group">
                    @Html.TextBoxFor(m => m.HoKH, "", new { @class = "auth-form__input", @placeholder = "Họ" })
                    @Html.ValidationMessageFor(m => m.HoKH, "", new { @class = "validate" })
                </div>


                <div class="auth-form__group">
                    @Html.TextBoxFor(m => m.Emai, "", new { @class = "auth-form__input", @placeholder = "Email của bạn" })
                    @Html.ValidationMessageFor(m => m.Emai, "", new { @class = "validate" })
                    @if (ViewBag.error != null)
                    {
                        <span style="color: #ff0000; display:block; margin:4px">@ViewBag.error</span>
                    }
                </div>
                <div class="auth-form__group">
                    @Html.PasswordFor(m => m.MatKhau, new { @class = "auth-form__input", @placeholder = "Mật khẩu của bạn" })
                    @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "validate" })
                </div>
                <div class="auth-form__group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "auth-form__input", @placeholder = "Nhập lại mật khẩu" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validate" })
                </div>
            </div>
            <div class="auth-form__aside">
                <p class="auth-form__policy-text">
                    Bằng việc đăng ký, bạn đã đồng ý với Nhà sách Phương Nam về
                    <a href="" class="auth-form__text-link">Điều khoản dịch vụ</a> &
                    <a href="" class="auth-form__text-link">Chính sách bảo mật</a>
                </p>
            </div>
            <div class="auth-form__controls">
                <button class="btn btn--hover" type="button" onclick="location.href='@Url.Action("Index", "Home")'">TRỞ LẠI</button>
                <input type="submit" name="submit" class="btn btn--primary value" value="Đăng Ký" />
            </div>

        </div>

    }
</div>


