@model Project_64130005.Models.NhanVien

@{
    ViewBag.Title = "Thông tin nhân viên";
    Layout = "~/Areas/Admin_64130005/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="app-title">
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item active"><a href="#"><b>Nhân viên: #@Model.MaNV</b></a></li>
    </ul>
    <div id="clock"></div>
</div>

<div class="row detail">
    <div class="col-md-4 detail__avatar">
        <img src="~/Images/NhanVien/@Model.AnhNV" alt="Ảnh đại diện" />
    </div>
    <div class="col-md-8">
        <div class="detail__item">
            <label class="control-label">Họ và tên: </label>
            @Model.HoTenNV
        </div>
        <div class="detail__item">
            <label class="control-label">Email: </label>
            @Model.Email
        </div> <div class="detail__item">
            <label class="control-label">Địa chỉ thường trú: </label>
            @Model.DiaChi
        </div> <div class="detail__item">
            <label class="control-label">Ngày sinh: </label>
            @(Model.NgaySinh?.ToString("dd/MM/yyyy"))
        </div> <div class="detail__item">
            <label class="control-label">Số điện thoại: </label>
            @Model.SDT
        </div>
        <div class="detail__item">
            <label class="control-label">Chức vụ: </label>
            @Model.LoaiNV.TenLoaiNV
        </div>
        <div class="detail__item">
            <label class="control-label">Giới tính: </label>
            @{
                if (Model.GioiTinh == true)
                {
                    <text>Nam</text>
                }
                else
                {
                    <text>Nữ</text>
                }
            }
        </div>
        <div class="detail__item">
            <label class="control-label">Ngày bắt đầu: </label>
            @(Model.CreatedAt?.ToString("dd/MM/yyyy"))
        </div>
        <div class="row btn">
            <button class="btn btn-save btn-sm edit" type="button" title="Sửa"
                    onclick="location.href='@Url.Action("Edit", "NhanVien_64130005",new { id = Model.MaNV })'">
                Chỉnh sửa thông tin
            </button>
            <a class="btn btn-cancel" href="@Url.Action("Index","NhanVien_64130005")">Hủy bỏ</a>
        </div>
    </div>

    <style>
        .detail {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        detail__avatar {
        }

        .detail__avatar img {
            height: 80%;
            width: 80%;
            object-fit: cover;
        }

        .detail__item {
            margin: 20px 0;
            display: block;
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 15px;
            line-height: 1.5;
            color: black;
            background-color: #f1f1f1;
            background-clip: padding-box;
            height: 45px;
            border: 1px solid #dadada;
            border-radius: .357rem;
        }
    </style>
