@using Project_64130005.Models;
@{
    Project_64130005Entities1 db = new Project_64130005Entities1();
    NhanVien nvSession = (NhanVien)Session["NV"];   
    NhanVien nv = db.NhanViens.Find(nvSession.MaNV);
}
<!-- Sidebar menu-->

<div class="app-sidebar__overlay" data-toggle="sidebar"></div>
<aside class="app-sidebar" style="background-color: #044785">
    <div class="app-sidebar__user">
        <img class="app-sidebar__user-avatar" src="~/Images/NhanVien/@nv.AnhNV" width="50px"
             alt="User Image">
        <div>

            <p class="app-sidebar__user-name"><b>@nv.HoTenNV</b></p>
            <p class="app-sidebar__user-designation">@nv.LoaiNV.TenLoaiNV</p>
        </div>
    </div>
    <hr>
    <ul class="app-menu">
        <li>
            <a class="app-menu__item" href="@Url.Action("Index","Home")">
                <i class='app-menu__icon bx bx-tachometer'></i><span class="app-menu__label">Bảng điều khiển</span>
            </a>
        </li>
        @if (nv.MaLoaiNV == "QL")
        {
            <li>
                <a class="app-menu__item" href="@Url.Action("Index","NhanVien_64130005")">
                    <i class='app-menu__icon bx bx-id-card'></i> <span class="app-menu__label">Quản lý nhân viên</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item" href="@Url.Action("Index", "KhachHang_64130005")">
                    <i class='app-menu__icon bx bx-user-voice'></i><span class="app-menu__label">Quản lý khách hàng</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item" href="@Url.Action("Index","Sach_64130005")">
                    <i class='app-menu__icon bx bx-purchase-tag-alt'></i><span class="app-menu__label">Quản lý sản phẩm</span>
                </a>
            </li>
        }
        <li>
            <a class="app-menu__item" href="@Url.Action("Index","DonHang_64130005")">
                <i class='app-menu__icon bx bx-task'></i><span class="app-menu__label">Quản lý đơn hàng</span>
            </a>
        </li>

    </ul>
</aside>

